@{
    ViewData["Title"] = "Seed Slots";
}

<h2>Seed Slots</h2>

<form asp-action="Seed" method="post">
    <div class="form-group">
        <label>Start</label>
        <input type="datetime-local" name="start" class="form-control" required />
    </div>
    <div class="form-group">
        <label>End</label>
        <input type="datetime-local" name="end" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Minutes Interval</label>
        <input type="number" name="minutes" class="form-control" value="30" required />
    </div>
    <div class="form-group">
        <label>Location</label>
        <input type="text" name="location" class="form-control" value="Main Office" required />
    </div>
    <button type="submit" class="btn btn-primary">Seed</button>
</form>
