@model VisaAppointmentSystem.Models.AvailableSlot

@{
    ViewData["Title"] = "Delete Slot";
}

<h2>Delete Slot</h2>

<div>
    <h4>Are you sure you want to delete this slot?</h4>
    <dl class="row">
        <dt class="col-sm-2">Date/Time</dt>
        <dd class="col-sm-10">@Model.SlotDateTime</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SlotID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
